<!DOCTYPE html>
<html lang="en">
    {{> head}}
<body style="padding-top: 50px;">
    {{> navbar}}
    {{> epigram}}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span10">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        <h2>
                            Deep Fij Login
                        </h2>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <form class="well" method="post">
                            <label>Email</label>
                            <input id="email" name="email" type="text" class="span3" placeholder="user@email.com"
                                   value="{{email}}"/>
                            <label class="password">
                                <input id="password" name="password" type="password" class="span3"/>
                            </label>
                            <button type="submit" class="btn">Login</button>
                        </form>
                    </div>
                </div>
                {{#loginFailed}}
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="alert">
                                Unable to login with the email and password provided.
                            </div>
                        </div>
                    </div>
                {{/loginFailed}}
            </div>
        </div>
        <div class="span2">{{> adsense}}</div>
    </div>
</div>
    {{> footer }}
</body>
</html>