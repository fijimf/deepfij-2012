<!DOCTYPE html>
<html lang="en">
    {{> head}}
<body style="padding-top: 50px;">
    {{> navbar}}
<div class="container-fluid">
    {{> epigram}}
    <div class="row-fluid">
        <div class="span12">
            <h1>
                {{name}}
            </h1>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <p>
                {{#standings}}
                    <img src="{{logoOpt}}"/>
                {{/standings}}
            </p>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <p>
            <table class="table table-bordered table-condensed" style="table-layout: fixed;">
                <thead>
                <tr>
                    <th style="text-align: center; width:5em; overflow:hidden;">Conf</th>
                    <th style="text-align: center; width:5em; overflow:hidden;">Overall</th>
                    <th style=" overflow:hidden;"></th>
                </tr>
                </thead>
                <tbody>
                    {{#standings}}
                    <tr>

                        <td style="text-align: center; width:5em; overflow:hidden;">
                            {{#conferenceRecord}}
                                {{won}}&nbsp;&ndash;&nbsp;{{lost}}
                            {{/conferenceRecord}}
                        </td>
                        <td style="text-align: center; width:5em; overflow:hidden;">
                            {{#record}}
                                {{won}}&nbsp;&ndash;&nbsp;{{lost}}
                            {{/record}}
                        </td>
                        <td style="text-align: left; overflow:hidden;">
                            <a href="/team/{{key}}">{{name}} {{nicknameOpt}}</a>
                        </td>
                    </tr>
                    {{/standings}}
                </tbody>
            </table>
            </p>
        </div>
    </div>

    {{> footer}}
</div>
</body>
</html>
