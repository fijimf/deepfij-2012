<!DOCTYPE html>
<html lang="en">
    {{> head}}
<body style="padding-top: 50px;">
    {{> navbar}}
    {{> epigram}}

<div class="container-fluid">
    <div class="row">
        <div class="span12">
            <h3>Search results for '{{query}}'
            </h3>
        </div>
    </div>


    <div class="row">
        <div class="span12">
            <table class="table table-bordered table-condensed">
                <thead>
                <tr>
                    <th>Team</th>
                    <th>Conference</th>
                </tr>
                </thead>
                <tbody>
                    {{#teams}}
                    <tr>
                        <td>
                            <a href="{{ctx}}/team/{{key}}">
                                {{name}} {{nickname}}
                            </a>
                        </td>
                        <td>
                            {{#conference}}{{name}}{{/conference}}
                        </td>
                    </tr>
                    {{/teams}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="span12">
            <table class="table table-bordered table-condensed">
                <thead>
                <tr>
                    <th>Conference</th>
                </tr>
                </thead>
                <tbody>
                    {{#conferences}}
                    <tr>
                        <td>
                            <a href="{{ctx}}/conference/{{key}}">
                                {{name}}
                            </a>
                        </td>
                    </tr>
                    {{/conferences}}
                </tbody>
            </table>
        </div>
    </div>

</div>
    {{> footer }}
</body>
</html>