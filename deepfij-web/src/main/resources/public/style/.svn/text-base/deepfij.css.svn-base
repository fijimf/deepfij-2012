/*
  Bootstrap's documentation styles
  Special styles for presenting Bootstrap's documentation and examples
*/

/* Body and structure
-------------------------------------------------- */
body {
    background-color: #fff;
    position: relative;
}

section {
    padding-top: 60px;
}

section > .row {
    margin-bottom: 10px;
}

.row-win {
    background-color: #efe;
}

.row-loss {
    background-color: #fee;
}

.epigram {
    font-size: 11px;
    color: #999;
    font-style: italic;
}

body {
    background-image: -webkit-linear-gradient(top, #DDE 20px, white 190px);
    background-repeat: no-repeat;
}